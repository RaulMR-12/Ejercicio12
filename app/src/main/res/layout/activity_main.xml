<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="395dp"
        android:layout_height="48dp"
        android:text="REGISTRE USUARI"
        android:textAlignment="center"
        android:textSize="70px" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="336dp"
        android:layout_height="103dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="109dp"
        android:ems="10"
        android:hint="Nom"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextText9"
        android:layout_width="336dp"
        android:layout_height="91dp"
        android:layout_alignBottom="@+id/editTextText3"
        android:layout_marginBottom="-96dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Cognom" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="336dp"
        android:layout_height="96dp"
        android:layout_alignBottom="@+id/editTextText9"
        android:layout_marginBottom="-90dp"
        android:ems="10"
        android:hint="Edat"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextText10"
        android:layout_width="336dp"
        android:layout_height="88dp"
        android:layout_alignBottom="@+id/editTextNumber2"
        android:layout_marginBottom="-91dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Nom d'usuari" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="336dp"
        android:layout_height="98dp"
        android:layout_alignBottom="@+id/editTextText10"
        android:layout_marginBottom="-94dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Contrasenya"/>

    <Button
        android:id="@+id/button"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/editTextTextPassword2"
        android:layout_marginBottom="-141dp"
        android:onClick="click"
        android:text="Send" />

</RelativeLayout>